<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="edu.mobidev.barrettokalingolapidario.newtestingproject.AboutInformationDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_informationIcon"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/tv_informationTitle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/iv_informationIcon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#11000000"
            android:paddingLeft="5dp"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_subtitleOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical"
        android:background="#f9d894"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_descriptionOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="#f9f1e6" />

    <TextView
        android:id="@+id/tv_subtitleTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:background="#f9d894"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_descriptionTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="#f9f1e6" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold"/>

</LinearLayout>
